{
  "compilerOptions": {
    "target": "ES2020",                           // 编译到 ES2020 目标
    "module": "ESNext",                           // 使用 ES 模块
    "moduleResolution": "Node",                   // Node 风格的模块解析
    "strict": true,                               // 启用所有严格类型检查
    "esModuleInterop": true,                      // 使 CommonJS 模块与 ES 模块兼容
    "skipLibCheck": true,                         // 跳过库的类型检查，加速构建
    "forceConsistentCasingInFileNames": true,     // 强制文件名一致性
    "baseUrl": ".",                               // 设置相对路径解析的根目录
    "paths": {
      "@parser/*": ["packages/parser/src/*"],     // 自定义路径映射
      "@renderer/*": ["packages/renderer/src/*"], // 自定义路径映射
      "@vue-example/*": ["packages/vue-example/src/*"]
    },
    "types": ["node", "jest"],                    // 引入 Node 和 Jest 类型
    "outDir": "./dist",                           // 输出目录
    "declaration": true,                          // 生成声明文件
    "declarationMap": true                       // 生成声明文件的映射
  },
  "include": [
    "packages/**/*",                              // 包括所有子包的源代码
    "src/**/*.ts",                                // 包括根目录的 ts 源代码
    "types/**/*.d.ts"                             // 包括类型定义文件
  ],
  "exclude": [
    "node_modules",                               // 排除 node_modules 目录
    "dist",                                       // 排除 dist 输出目录
    "**/*.test.ts"                                // 排除测试文件
  ]
}
